function [ p ] = Pdeath(params, Hydrogen)
        % create a matrix 'p' to hold the probabilities of cell death from
        % low pH (acidic)
        

    
    p(Hydrogen < params.hn  &&  ( State == 1,2,5,6], State) == [1,1,1,1]) = Hydrogen / hn;
    p(Hydrogen < params.ht  &&  (ismember([3,4,7,8], State) == [1,1,1,1]) = Hydrogen / ht;
    
end